{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "lib": ["DOM", "ES2020"]
  },
  "include": ["src/client/**/*.ts"],
  "exclude": ["node_modules"]
}