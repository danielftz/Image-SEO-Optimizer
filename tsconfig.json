{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./public/js",
    "rootDir": "./src/ts",
    "lib": ["DOM", "ES2020"]
  },
  "include": ["src/ts/**/*.ts"],
  "exclude": ["node_modules"]
}